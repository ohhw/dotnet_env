@page
@model MyConsoleApp.Pages.Calculator.IndexModel
@{
ViewData["Title"] = "계산기";
}

<h1>🧮 고급 과학 계산기</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
<div
    style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 15px; border-radius: 5px; margin: 15px 0;">
    <strong>❌ 오류:</strong> @Model.ErrorMessage
</div>
}

@if (Model.HasResult)
{
<div
    style="background: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 15px; border-radius: 5px; margin: 15px 0;">
    <strong>✅ 계산 결과:</strong> @Model.ResultValue
</div>
}

<div style="max-width: 800px; margin: 0 auto;">
    <form method="get" style="background: #f8f9fa; padding: 25px; border-radius: 10px; margin: 20px 0;">
        <h3>🔢 기본 계산</h3>
        <div style="display: flex; gap: 15px; margin-bottom: 15px; align-items: flex-start;">
            <div style="flex: 1;">
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">첫 번째 수:</label>
                <input name="op1" type="number" step="any" value="@Model.Op1"
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 14px;"
                    placeholder="숫자 입력">
            </div>
            <div style="flex: 1; text-align: center;">
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">연산자:</label>
                <select name="opr"
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 14px;">
                    <option value="+" @(Model.Opr=="+" ? "selected" : "" )>+ 더하기</option>
                    <option value="-" @(Model.Opr=="-" ? "selected" : "" )>- 빼기</option>
                    <option value="*" @(Model.Opr=="*" ? "selected" : "" )">× 곱하기</option>
                    <option value="/" @(Model.Opr=="/" ? "selected" : "" )">÷ 나누기</option>
                    <option value="%" @(Model.Opr=="%" ? "selected" : "" )">% 나머지</option>
                    <option value="**" @(Model.Opr=="**" ? "selected" : "" )">^ 거듭제곱</option>
                </select>
            </div>
            <div style="flex: 1;">
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">두 번째 수:</label>
                <input name="op2" type="number" step="any" value="@Model.Op2"
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 14px;"
                    placeholder="숫자 입력">
            </div>
        </div>
        <div style="text-align: center;">
            <button type="submit"
                style="background: #007bff; color: white; padding: 12px 25px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">
                🧮 계산하기
            </button>
        </div>
    </form>

    <form method="get" style="background: #e8f5e8; padding: 25px; border-radius: 10px; margin: 20px 0;">
        <h3>📐 고급 수학 함수</h3>
        <div
            style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 15px; align-items: flex-start;">
            <div>
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">함수:</label>
                <select name="func"
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 14px;">
                    <option value="sin" @(Model.Func=="sin" ? "selected" : "" )>📐 사인 (sin)</option>
                    <option value="cos" @(Model.Func=="cos" ? "selected" : "" )>📐 코사인 (cos)</option>
                    <option value="tan" @(Model.Func=="tan" ? "selected" : "" )">📐 탄젠트 (tan)</option>
                    <option value="log" @(Model.Func=="log" ? "selected" : "" )">📊 상용로그 (log10)</option>
                    <option value="ln" @(Model.Func=="ln" ? "selected" : "" )">📊 자연로그 (ln)</option>
                    <option value="sqrt" @(Model.Func=="sqrt" ? "selected" : "" )">🔢 제곱근 (√)</option>
                    <option value="abs" @(Model.Func=="abs" ? "selected" : "" )">🔢 절댓값 (|x|)</option>
                    <option value="exp" @(Model.Func=="exp" ? "selected" : "" )">🔢 지수함수 (e^x)</option>
                </select>
            </div>
            <div>
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">입력값:</label>
                <input name="value" type="number" step="any" value="@Model.Value"
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 14px;"
                    placeholder="함수 입력값">
            </div>
        </div>
        <div style="text-align: center;">
            <button type="submit"
                style="background: #28a745; color: white; padding: 12px 25px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">
                📐 함수 계산
            </button>
        </div>
    </form>

    <div style="background: #fff3cd; padding: 20px; border-radius: 10px; margin: 20px 0;">
        <h3>🔢 수학 상수</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
            <a href="/Calculator?const=pi"
                style="display: block; background: #17a2b8; color: white; padding: 12px; text-align: center; text-decoration: none; border-radius: 5px;">
                π (파이) ≈ 3.14159
            </a>
            <a href="/Calculator?const=e"
                style="display: block; background: #fd7e14; color: white; padding: 12px; text-align: center; text-decoration: none; border-radius: 5px;">
                e (자연상수) ≈ 2.71828
            </a>
            <a href="/Calculator?const=sqrt2"
                style="display: block; background: #6f42c1; color: white; padding: 12px; text-align: center; text-decoration: none; border-radius: 5px;">
                √2 ≈ 1.41421
            </a>
            <a href="/Calculator?const=phi"
                style="display: block; background: #20c997; color: white; padding: 12px; text-align: center; text-decoration: none; border-radius: 5px;">
                φ (황금비) ≈ 1.61803
            </a>
        </div>
    </div>
</div>

<div style="text-align: center; margin-top: 30px;">
    <a href="/"
        style="background:#6c757d; color:#fff; padding:10px 20px; text-decoration:none; border-radius:5px; font-size:14px;">🏠
        홈으로 돌아가기</a>
</div>