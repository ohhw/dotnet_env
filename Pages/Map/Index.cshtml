@page
@model App.Pages.Map.IndexModel
@{
    ViewData["Title"] = "지도 서비스";
}

<div style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 30px; border-radius: 15px; margin-bottom: 30px; text-align: center; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
    <h1 style="margin-bottom: 15px; font-size: 2.2em;">🗺️ 지도 서비스</h1>
    <p style="font-size: 1.1em; opacity: 0.9;">원하시는 지도 서비스를 선택해주세요!</p>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin-bottom: 30px;">
    
    <!-- 구글 지도 -->
    <div class="map-service-card" style="background: #4285f4; color: white; padding: 25px; border-radius: 15px; text-align: center; box-shadow: 0 4px 15px rgba(66, 133, 244, 0.3); transition: transform 0.3s ease;">
        <div style="font-size: 3em; margin-bottom: 15px;">🌍</div>
        <h3 style="margin-bottom: 15px; font-size: 1.4em;">Google 지도</h3>
        <p style="margin-bottom: 20px; opacity: 0.9; line-height: 1.5;">
            전 세계 상세한 지도 정보와<br>
            실시간 교통 정보, 스트리트 뷰 제공
        </p>
        <a href="https://maps.google.com" target="_blank" 
           style="background: white; color: #4285f4; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: bold; display: inline-block; transition: all 0.3s ease;">
            🚀 Google 지도 열기
        </a>
    </div>

    <!-- 네이버 지도 -->
    <div class="map-service-card" style="background: #03c75a; color: white; padding: 25px; border-radius: 15px; text-align: center; box-shadow: 0 4px 15px rgba(3, 199, 90, 0.3); transition: transform 0.3s ease;">
        <div style="font-size: 3em; margin-bottom: 15px;">🇰🇷</div>
        <h3 style="margin-bottom: 15px; font-size: 1.4em;">네이버 지도</h3>
        <p style="margin-bottom: 20px; opacity: 0.9; line-height: 1.5;">
            한국 최고의 상세 지도 정보와<br>
            대중교통, 맛집 정보 풍부
        </p>
        <a href="https://map.naver.com" target="_blank" 
           style="background: white; color: #03c75a; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: bold; display: inline-block; transition: all 0.3s ease;">
            🎯 네이버 지도 열기
        </a>
    </div>

    <!-- 카카오맵 -->
    <div class="map-service-card" style="background: #fee500; color: #3c1e1e; padding: 25px; border-radius: 15px; text-align: center; box-shadow: 0 4px 15px rgba(254, 229, 0, 0.3); transition: transform 0.3s ease;">
        <div style="font-size: 3em; margin-bottom: 15px;">🟡</div>
        <h3 style="margin-bottom: 15px; font-size: 1.4em;">카카오맵</h3>
        <p style="margin-bottom: 20px; opacity: 0.8; line-height: 1.5;">
            깔끔한 UI와 편리한 검색<br>
            로드뷰와 장소 정보 특화
        </p>
        <a href="https://map.kakao.com" target="_blank" 
           style="background: #3c1e1e; color: #fee500; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: bold; display: inline-block; transition: all 0.3s ease;">
            🗺️ 카카오맵 열기
        </a>
    </div>

</div>

<!-- 지도 사용 팁 -->
<div style="background: #f8f9fa; padding: 25px; border-radius: 15px; border-left: 5px solid #28a745; margin-bottom: 30px;">
    <h3 style="color: #28a745; margin-bottom: 15px;">💡 지도 활용 팁</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px;">
        <div style="background: white; padding: 15px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
            <strong style="color: #4285f4;">🌍 Google 지도</strong>
            <p style="margin: 8px 0; font-size: 14px; color: #666;">해외 여행이나 전 세계 정보가 필요할 때</p>
        </div>
        <div style="background: white; padding: 15px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
            <strong style="color: #03c75a;">🇰🇷 네이버 지도</strong>
            <p style="margin: 8px 0; font-size: 14px; color: #666;">한국 내 상세한 위치나 대중교통 이용시</p>
        </div>
        <div style="background: white; padding: 15px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
            <strong style="color: #3c1e1e;">🟡 카카오맵</strong>
            <p style="margin: 8px 0; font-size: 14px; color: #666;">맛집이나 핫플레이스 검색할 때</p>
        </div>
    </div>
</div>

<!-- 빠른 검색 기능 -->
<div style="background: white; padding: 25px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); margin-bottom: 30px;">
    <h3 style="color: #333; margin-bottom: 20px; text-align: center;">🔍 빠른 장소 검색</h3>
    <div style="display: flex; gap: 10px; margin-bottom: 15px; flex-wrap: wrap; justify-content: center;">
        <input type="text" id="searchLocation" placeholder="검색할 장소를 입력하세요" 
               style="flex: 1; max-width: 400px; padding: 12px 15px; border: 2px solid #e9ecef; border-radius: 8px; font-size: 16px;">
        <button onclick="searchInGoogle()" style="background: #4285f4; color: white; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
            Google에서 검색
        </button>
        <button onclick="searchInNaver()" style="background: #03c75a; color: white; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
            네이버에서 검색
        </button>
        <button onclick="searchInKakao()" style="background: #fee500; color: #3c1e1e; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
            카카오에서 검색
        </button>
    </div>
    <div style="text-align: center; margin-top: 15px;">
        <button onclick="getCurrentLocation()" style="background: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer;">
            📍 현재 위치 찾기
        </button>
    </div>
</div>

<!-- 홈으로 돌아가기 -->
<div style="text-align: center; margin-top: 30px;">
    <a href="/" style="background: #007bff; color: white; padding: 15px 30px; text-decoration: none; border-radius: 8px; font-weight: bold; display: inline-block;">
        🏠 홈으로 돌아가기
    </a>
</div>

@section Scripts {
    <script>
        // 카드 호버 효과
        document.querySelectorAll('.map-service-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // 검색 기능
        function searchInGoogle() {
            const query = document.getElementById('searchLocation').value;
            if (query.trim()) {
                window.open(`https://maps.google.com/maps?q=${encodeURIComponent(query)}`, '_blank');
            } else {
                alert('검색할 장소를 입력해주세요!');
            }
        }

        function searchInNaver() {
            const query = document.getElementById('searchLocation').value;
            if (query.trim()) {
                window.open(`https://map.naver.com/v5/search/${encodeURIComponent(query)}`, '_blank');
            } else {
                alert('검색할 장소를 입력해주세요!');
            }
        }

        function searchInKakao() {
            const query = document.getElementById('searchLocation').value;
            if (query.trim()) {
                window.open(`https://map.kakao.com/?q=${encodeURIComponent(query)}`, '_blank');
            } else {
                alert('검색할 장소를 입력해주세요!');
            }
        }

        function getCurrentLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    
                    // 사용자에게 어느 지도에서 열지 선택하게 함
                    const choice = prompt('현재 위치를 어느 지도에서 보시겠습니까?\n1: Google 지도\n2: 네이버 지도\n3: 카카오맵\n\n번호를 입력해주세요:');
                    
                    switch(choice) {
                        case '1':
                            window.open(`https://maps.google.com/?q=${lat},${lng}`, '_blank');
                            break;
                        case '2':
                            window.open(`https://map.naver.com/v5/?c=${lng},${lat},15,0,0,0,dh`, '_blank');
                            break;
                        case '3':
                            window.open(`https://map.kakao.com/?urlX=${lng}&urlY=${lat}&urlLevel=3`, '_blank');
                            break;
                        default:
                            if (choice !== null) {
                                alert('1, 2, 3 중 하나를 입력해주세요!');
                            }
                    }
                }, function() {
                    alert('위치 정보를 가져올 수 없습니다.');
                });
            } else {
                alert('이 브라우저는 위치 서비스를 지원하지 않습니다.');
            }
        }

        // 엔터키로 검색
        document.getElementById('searchLocation').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchInGoogle(); // 기본적으로 구글에서 검색
            }
        });
    </script>
}
