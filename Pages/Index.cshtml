@page
@model MyConsoleApp.Pages.IndexModel
@{
    ViewData["Title"] = "홈";
}

<!-- 메인 컨텐츠를 좌우로 분할 -->
<div class="grid-container" style="display: grid; grid-template-columns: 2fr 3fr; gap: 20px; margin-bottom: 30px; max-width: 1400px; margin: 0 auto 30px auto; padding: 0 20px;">
    
    <!-- 좌측 영역: 기존 컨텐츠 -->
    <div style="background: white; padding: 20px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
        
        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px; border-radius: 15px; margin-bottom: 30px; text-align: center; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
            <h1 style="margin-bottom: 20px; font-size: 2.2em;">Hello, World! @(Model.UserName)님!</h1>
            
            @if (Model.UserName == "방문자")
            {
                <div style="background: rgba(255,255,255,0.1); padding: 20px; border-radius: 10px; margin-top: 20px;">
                    <p style="margin-bottom: 15px; font-size: 1.1em;">👋 안녕하세요! 이름을 알려주시면 더 친근하게 인사드릴게요!</p>
                    <form method="post" style="display: flex; gap: 10px; justify-content: center; align-items: center; flex-wrap: wrap;">
                        @Html.AntiForgeryToken()
                        <input type="text" name="userName" placeholder="이름을 입력해주세요" required 
                               style="padding: 10px 15px; border: none; border-radius: 5px; font-size: 14px; min-width: 200px; color: #333;">
                        <button type="submit" style="background: #28a745; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-weight: bold;">
                            ✨ 인사하기
                        </button>
                    </form>
                </div>
            }
            else
            {
                <p style="font-size: 1.1em; opacity: 0.9;">환영합니다! 오늘도 좋은 하루 되세요! 🌟</p>
                <div style="margin-top: 15px;">
                    <a href="/" style="background: rgba(255,255,255,0.2); color: white; padding: 8px 15px; text-decoration: none; border-radius: 5px; font-size: 14px;">
                        👤 다른 이름으로 변경
                    </a>
                </div>
            }
        </div>

        <div class="time-display">
            <h2>현재 시간: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</h2>
        </div>

        <div style="text-align: center; margin: 10px 0;">
            <button onclick="location.reload()">시간 새로고침</button>
            <button onclick="window.location.href='/Time'" style="background:#343a40;">🕐 시간 페이지</button>
            <button onclick="window.location.href='/Time?format=json'" style="background:#fd7e14;">📊 JSON 형식으로 시간 보기</button>
        </div>

        <div class="memo-section">
            <div class="memo-header">
                <h3>📝 메모장 (@(Model.MemoCount)개)</h3>
                <div>
                    <button class="add-btn" onclick="addNewMemo()">✏️ 새 메모 추가</button>
                    @if (Model.MemoCount > 0)
                    {
                        <button class="delete-btn" onclick="confirmDelete()">🗑️ 전체 삭제</button>
                    }
                </div>
            </div>
            
            <div class="memo-list">
                @if (Model.MemoCount > 0)
                {
                    @for (int i = 0; i < Model.Memos.Count; i++)
                    {
                        <div class="memo-item"><strong>#@(i + 1)</strong> @Model.Memos[i]</div>
                    }
                }
                else
                {
                    <div class="no-memo">📝 아직 등록된 메모가 없습니다.</div>
                }
            </div>
            
            <div style="text-align: center; margin-top: 15px;">
                <a href="/Memo/View" class="memo-link" style="background:#17a2b8;color:#fff;">📋 전체 메모 페이지로 이동</a>
                @if (Model.MemoCount > 0)
                {
                    <a href="/Memo/Export" style="background:#fd7e14;color:#fff;">💾 TXT 파일로 내보내기</a>
                }
            </div>
        </div>

        <div class="other-links">
            <h3>🔗 기타 기능</h3>
            <a href="/HelloWorld" style="background:#6c757d;color:#fff;">Hello World 페이지</a>
            <a href="/Calculator" style="background:#28a745;color:#fff;">🧮 계산기</a>
        </div>
        
    </div>

    <!-- 우측 영역: 지도 서비스 -->
    <div style="background: white; padding: 20px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
        
        <div style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 20px; border-radius: 15px; margin-bottom: 20px; text-align: center; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
            <h2 style="margin-bottom: 10px; font-size: 1.6em;">🗺️ 스마트 지도</h2>
            <p style="font-size: 0.9em; opacity: 0.9; margin: 0;" id="mapDescription">현재: Google 지도 (서울시청 기준)</p>
        </div>

        <!-- 실제 지도 임베딩 -->
        <div style="position: relative; width: 100%; height: 400px; border-radius: 12px; overflow: hidden; margin-bottom: 20px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
            <iframe 
                id="mapFrame"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3162.4201937417!2d126.97794!3d37.566535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x357ca2eb6b5ace81%3A0x5e1e0e55d98cd497!2z7ISc7Jq47Yq567OE7IucIOykkeq1rCDsoJXroZzqtawg7Iqk66y47Iuj!5e0!3m2!1sko!2skr!4v1691234567890!5m2!1sko!2skr"
                width="100%" 
                height="100%" 
                style="border:0; border-radius: 12px;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>

        <!-- 지도 서비스 선택 버튼들 -->
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 12px; margin-bottom: 20px;">
            
            <!-- 구글 지도 -->
            <button id="googleBtn" onclick="switchToGoogle()" style="background: #4285f4; color: white; padding: 15px; border: none; border-radius: 12px; cursor: pointer; transition: all 0.3s ease; text-align: center; border: 3px solid #4285f4;" onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'">
                <div style="font-size: 1.5em; margin-bottom: 5px;">🌍</div>
                <div style="font-weight: bold; font-size: 14px;">Google 지도</div>
            </button>

            <!-- 네이버 지도 -->
            <button id="naverBtn" onclick="switchToNaver()" style="background: #03c75a; color: white; padding: 15px; border: none; border-radius: 12px; cursor: pointer; transition: all 0.3s ease; text-align: center; border: 3px solid transparent;" onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'">
                <div style="font-size: 1.5em; margin-bottom: 5px;">🇰🇷</div>
                <div style="font-weight: bold; font-size: 14px;">네이버 지도</div>
            </button>

            <!-- 카카오맵 -->
            <button id="kakaoBtn" onclick="switchToKakao()" style="background: #fee500; color: #3c1e1e; padding: 15px; border: none; border-radius: 12px; cursor: pointer; transition: all 0.3s ease; text-align: center; border: 3px solid transparent;" onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'">
                <div style="font-size: 1.5em; margin-bottom: 5px;">🟡</div>
                <div style="font-weight: bold; font-size: 14px;">카카오맵</div>
            </button>

        </div>

        <!-- 경로 검색 -->
        <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; border: 1px solid #e9ecef; margin-bottom: 15px;">
            <h4 style="color: #333; margin-bottom: 15px; text-align: center;">� 경로 검색</h4>
            <div style="margin-bottom: 12px;">
                <input type="text" id="startLocation" placeholder="출발지를 입력하세요" 
                       style="width: 100%; padding: 12px; border: 2px solid #e9ecef; border-radius: 8px; font-size: 14px; box-sizing: border-box;">
            </div>
            <div style="margin-bottom: 15px;">
                <input type="text" id="endLocation" placeholder="도착지를 입력하세요" 
                       style="width: 100%; padding: 12px; border: 2px solid #e9ecef; border-radius: 8px; font-size: 14px; box-sizing: border-box;">
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px;">
                <button onclick="routeSearchGoogle()" style="background: #4285f4; color: white; padding: 10px 12px; border: none; border-radius: 8px; cursor: pointer; font-size: 13px; font-weight: bold;">
                    Google 경로
                </button>
                <button onclick="routeSearchNaver()" style="background: #03c75a; color: white; padding: 10px 12px; border: none; border-radius: 8px; cursor: pointer; font-size: 13px; font-weight: bold;">
                    네이버 경로
                </button>
                <button onclick="routeSearchKakao()" style="background: #fee500; color: #3c1e1e; padding: 10px 12px; border: none; border-radius: 8px; cursor: pointer; font-size: 13px; font-weight: bold;">
                    카카오 경로
                </button>
            </div>
        </div>

        <!-- 빠른 검색 -->
        <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; border: 1px solid #e9ecef;">
            <h4 style="color: #333; margin-bottom: 15px; text-align: center;">🔍 빠른 장소 검색</h4>
            <div style="margin-bottom: 15px;">
                <input type="text" id="quickSearchLocation" placeholder="장소를 입력하세요" 
                       style="width: 100%; padding: 12px; border: 2px solid #e9ecef; border-radius: 8px; font-size: 14px; box-sizing: border-box;">
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px;">
                <button onclick="quickSearchCurrent()" style="background: #6c757d; color: white; padding: 10px 12px; border: none; border-radius: 8px; cursor: pointer; font-size: 13px; font-weight: bold;">
                    현재 지도에서
                </button>
                <button onclick="quickSearchGoogle()" style="background: #4285f4; color: white; padding: 10px 12px; border: none; border-radius: 8px; cursor: pointer; font-size: 13px; font-weight: bold;">
                    새창 Google
                </button>
                <button onclick="quickSearchNaver()" style="background: #03c75a; color: white; padding: 10px 12px; border: none; border-radius: 8px; cursor: pointer; font-size: 13px; font-weight: bold;">
                    새창 네이버
                </button>
            </div>
        </div>

        <!-- 상세 페이지 링크 -->
        <div style="text-align: center; margin-top: 20px;">
            <a href="/Map" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 12px 25px; text-decoration: none; border-radius: 8px; font-weight: bold; display: inline-block; transition: all 0.3s ease;">
                🌍 더 많은 지도 기능 보기
            </a>
        </div>

    </div>
    
</div>

@section Scripts {
    <script>
        // 전역 변수
        let currentMapService = 'google';
        
        function addNewMemo() {
            var message = prompt('새 메모를 입력하세요:');
            if (message && message.trim()) {
                window.location.href = '/Memo/Add?Message=' + encodeURIComponent(message.trim());
            }
        }
        
        function confirmDelete() {
            if (confirm('정말로 모든 메모를 삭제하시겠습니까?')) {
                window.location.href = '/Memo/Delete';
            }
        }

        // 지도 서비스 전환 함수들
        function switchToGoogle() {
            currentMapService = 'google';
            const mapFrame = document.getElementById('mapFrame');
            mapFrame.src = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3162.4201937417!2d126.97794!3d37.566535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x357ca2eb6b5ace81%3A0x5e1e0e55d98cd497!2z7ISc7Jq47Yq567OE7IucIOykkeq1rCDsoJXroZzqtawg7Iqk66y47Iuj!5e0!3m2!1sko!2skr!4v1691234567890!5m2!1sko!2skr';
            document.getElementById('mapDescription').textContent = '현재: Google 지도 (서울시청 기준)';
            updateButtonStyles('google');
        }

        function switchToNaver() {
            currentMapService = 'naver';
            const mapFrame = document.getElementById('mapFrame');
            mapFrame.src = 'https://map.naver.com/v5/iframe/marker?lat=37.566535&lng=126.97794&title=서울시청&zoom=16';
            document.getElementById('mapDescription').textContent = '현재: 네이버 지도 (서울시청 기준)';
            updateButtonStyles('naver');
        }

        function switchToKakao() {
            currentMapService = 'kakao';
            const mapFrame = document.getElementById('mapFrame');
            // 카카오맵은 직접 임베드가 제한적이므로 대안 방법 사용
            mapFrame.src = 'https://map.kakao.com/link/map/서울시청,37.566535,126.97794';
            document.getElementById('mapDescription').textContent = '현재: 카카오맵 (서울시청 기준)';
            updateButtonStyles('kakao');
        }

        // 버튼 스타일 업데이트
        function updateButtonStyles(activeService) {
            // 모든 버튼 초기화
            document.getElementById('googleBtn').style.border = '3px solid transparent';
            document.getElementById('naverBtn').style.border = '3px solid transparent';
            document.getElementById('kakaoBtn').style.border = '3px solid transparent';
            
            // 활성 버튼 표시
            if (activeService === 'google') {
                document.getElementById('googleBtn').style.border = '3px solid #1a73e8';
            } else if (activeService === 'naver') {
                document.getElementById('naverBtn').style.border = '3px solid #00c73c';
            } else if (activeService === 'kakao') {
                document.getElementById('kakaoBtn').style.border = '3px solid #ffcd00';
            }
        }

        // 경로 검색 함수들
        function routeSearchGoogle() {
            const start = document.getElementById('startLocation').value;
            const end = document.getElementById('endLocation').value;
            
            if (!start || !end) {
                alert('출발지와 도착지를 모두 입력해주세요!');
                return;
            }
            
            const url = `https://www.google.com/maps/dir/${encodeURIComponent(start)}/${encodeURIComponent(end)}`;
            window.open(url, '_blank');
        }

        function routeSearchNaver() {
            const start = document.getElementById('startLocation').value;
            const end = document.getElementById('endLocation').value;
            
            if (!start || !end) {
                alert('출발지와 도착지를 모두 입력해주세요!');
                return;
            }
            
            const url = `https://map.naver.com/v5/directions/${encodeURIComponent(start)}/${encodeURIComponent(end)}/-/car`;
            window.open(url, '_blank');
        }

        function routeSearchKakao() {
            const start = document.getElementById('startLocation').value;
            const end = document.getElementById('endLocation').value;
            
            if (!start || !end) {
                alert('출발지와 도착지를 모두 입력해주세요!');
                return;
            }
            
            const url = `https://map.kakao.com/link/to/${encodeURIComponent(end)}`;
            window.open(url, '_blank');
        }

        // 현재 지도에서 검색
        function quickSearchCurrent() {
            const query = document.getElementById('quickSearchLocation').value;
            if (!query.trim()) {
                alert('검색할 장소를 입력해주세요!');
                return;
            }
            
            const mapFrame = document.getElementById('mapFrame');
            
            if (currentMapService === 'google') {
                mapFrame.src = `https://www.google.com/maps/embed/v1/search?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dO2_fMcYNEwZxM&q=${encodeURIComponent(query)}`;
                document.getElementById('mapDescription').textContent = `현재: Google 지도 (${query} 검색)`;
            } else if (currentMapService === 'naver') {
                mapFrame.src = `https://map.naver.com/v5/search/${encodeURIComponent(query)}`;
                document.getElementById('mapDescription').textContent = `현재: 네이버 지도 (${query} 검색)`;
            } else if (currentMapService === 'kakao') {
                mapFrame.src = `https://map.kakao.com/link/search/${encodeURIComponent(query)}`;
                document.getElementById('mapDescription').textContent = `현재: 카카오맵 (${query} 검색)`;
            }
        }

        // 빠른 검색 기능 (새창)
        function quickSearchGoogle() {
            const query = document.getElementById('quickSearchLocation').value;
            if (query.trim()) {
                window.open(`https://maps.google.com/maps?q=${encodeURIComponent(query)}`, '_blank');
            } else {
                alert('검색할 장소를 입력해주세요!');
            }
        }

        function quickSearchNaver() {
            const query = document.getElementById('quickSearchLocation').value;
            if (query.trim()) {
                window.open(`https://map.naver.com/v5/search/${encodeURIComponent(query)}`, '_blank');
            } else {
                alert('검색할 장소를 입력해주세요!');
            }
        }

        // 엔터키 이벤트
        document.addEventListener('DOMContentLoaded', function() {
            // 빠른 검색
            document.getElementById('quickSearchLocation').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    quickSearchCurrent();
                }
            });
            
            // 경로 검색
            document.getElementById('startLocation').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    document.getElementById('endLocation').focus();
                }
            });
            
            document.getElementById('endLocation').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    if (currentMapService === 'google') {
                        routeSearchGoogle();
                    } else if (currentMapService === 'naver') {
                        routeSearchNaver();
                    } else {
                        routeSearchKakao();
                    }
                }
            });
        });
    </script>
}
